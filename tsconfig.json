{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/config/*",
        "src/controller/*",
        "src/middleware/*",
        "src/models/*",
        "src/routes/*"
      ]
    }
  },
  "include": ["./src/*.ts"]
}
